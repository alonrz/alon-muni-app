<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/square_round_corners"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/stopTitleAndDist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingLeft="17dp"
            android:paddingTop="10dp"
            android:text="stopTitle: 19th and Holloway"
            android:textSize="18sp" />
        
        <TextView 
            android:id="@+id/stopId"
            android:visibility="invisible" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/stopDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:text="(100m)"
            android:textColor="#999999"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/routeTag"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/circle_line_number"
            android:gravity="center"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_marginBottom="4dp"
            android:text="M"
            android:textSize="20sp" />
        
        <TextView 
            android:id="@+id/routeId"
            android:visibility="invisible" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/arrivingInText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Arriving in "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/nextTrainTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="5dp"
            android:text="10"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/minText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text=" min"
            android:textSize="18sp" />
       
        <CheckBox
	        android:id="@+id/star"
	        style="?android:attr/starStyle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
	        android:checked="false"
	        android:tag="1" 
	        android:visibility="invisible"/> 
        
    </LinearLayout>

    <TextView
        android:id="@+id/moreTrainTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingLeft="90dp"
        android:text="Next: 12, 15, 16* min"
        android:textSize="14sp" />

</LinearLayout>